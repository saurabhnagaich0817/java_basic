public class decimal2bin {
    public static void main(String[] args) {
        int n=14;
        int i=0;
        int j=1;
      
            while (n != 0) {
                int rem =n%2;
                i = i+rem*j;
                j =j*10;
                n =n/2;
            }
            System.out.println(i);
            
        }          
                

    
    
}
